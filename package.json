{
  "name": "@rebasejs/rebase",
  "version": "1.2.0",
  "description": "Set of UI components built for React with styled-components and styled-system.",
  "main": "dist/index.js",
  "repository": "git@github.com:rebasejs/rebase.git",
  "author": "Rafael Franco <rafaelfr@outlook.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && babel src -d dist",
    "clean": "rm -rf dist",
    "docs:dev": "docz dev",
    "docs:build": "docz build",
    "cover": "jest --coverage && npx codecov",
    "test": "jest",
    "lint": "eslint \"./**/*.js\"",
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "yarn build && np"
  },
  "dependencies": {
    "polished": "^3.2.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "styled-components": "^4.2.0",
    "styled-system": "^4.2.2",
    "ulid": "^2.3.0",
    "use-force-update": "^1.0.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.7.1",
    "docz": "^1.2.0",
    "docz-theme-default": "^1.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "git-cz": "^3.0.1",
    "jest": "^24.5.0",
    "jest-styled-components": "^6.3.1",
    "np": "^5.0.2",
    "react-test-renderer": "^16.8.6",
    "react-testing-library": "^7.0.1"
  },
  "jest": {
    "testMatch": [
      "**/test/**/*.js"
    ],
    "setupFilesAfterEnv": [
      "jest-styled-components"
    ],
    "coverageReporters": [
      "html",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  }
}
